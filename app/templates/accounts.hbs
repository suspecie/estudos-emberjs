<h1>Contas</h1>
<p>Gerenciamento de contas bancárias</p>

{{ outlet }}

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Título</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |account|}}
            <tr>
                <td>{{ account.id }}</td>
                <td>{{ account.title }}</td>
                <td>
                    {{#link-to "accounts.view" account.id class="btn"}}
                        ver
                    {{/link-to}}
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
<hr>
{{#link-to "accounts.add" class="btn"}}
    novo
{{/link-to}}